<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.home.view.HomeFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This application is intended to use the Azure ML API for stator winding temperature prediction."
        android:textColor="@color/colorBlack"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">
    </TextView>

    <Button
        android:id="@+id/btnShowInputFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert inputs"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnShowViewGraphFragment"
        android:layout_marginTop="200dp"
        >
    </Button>

    <Button
        android:id="@+id/btnShowViewGraphFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show graph view"
        app:layout_constraintTop_toBottomOf="@id/btnShowInputFragment"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        >
    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>