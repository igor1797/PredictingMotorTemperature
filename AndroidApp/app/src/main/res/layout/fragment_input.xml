<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.input.view.InputFragment"
    android:padding="20dp">

    <EditText
        android:id="@+id/etAmbient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Ambient temperature"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/etCoolant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Coolant temperature"
        app:layout_constraintTop_toBottomOf="@id/etAmbient"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/etU_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Voltage d-component"
        app:layout_constraintTop_toBottomOf="@id/etCoolant"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/etU_q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Voltage q-component"
        app:layout_constraintTop_toBottomOf="@id/etU_d"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/etMotorSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Motor speed"
        app:layout_constraintTop_toBottomOf="@id/etU_q"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/etI_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Current d-component"
        app:layout_constraintTop_toBottomOf="@id/etMotorSpeed"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/etI_q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Current q-component"
        app:layout_constraintTop_toBottomOf="@id/etI_d"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/etPm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Permanent Magnet surface temperature"
        app:layout_constraintTop_toBottomOf="@id/etI_q"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/etStatorYoke"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Stator yoke temperature"
        app:layout_constraintTop_toBottomOf="@id/etPm"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <EditText
        android:id="@+id/etStatorTooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:hint="Stator tooth temperature"
        app:layout_constraintTop_toBottomOf="@id/etStatorYoke"
        app:layout_constraintStart_toStartOf="parent"
        >
    </EditText>

    <Button
        android:id="@+id/btnPredictStatorWinding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Predict stator winding temperature"
        app:layout_constraintTop_toBottomOf="@id/etStatorTooth"
        android:layout_marginTop="10dp">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>